\newglossaryentry{funcdecomp}{
	name={Functional Decomposition},
	description={The breakdown of a complex design into numerous, simpler tasks that the overall design must complete}
}
\newglossaryentry{wdm}{
	name={Weighted Decision Matrix (WDM)},
	description={A quantitative method of scoring that assesses the performance of concepts across weighted criteria using absolute scoring}
}
\newglossaryentry{pugh}{
	name={Pugh Chart},
	description={A method of ranking that compares a concept’s performance to a datum qualitatively as better, worse, or the same.}
}
\newglossaryentry{toplevel}{
	name={Top-Level Functions},
	description={The tasks that every design-to-be must complete}
}
\newglossaryentry{conceptfrags}{
	name={Concept Fragments},
	description={Possible solutions to a given function}
}
\newglossaryentry{morph}{
	name={Morphological Chart},
	description={A methodical way of combining various concept fragments into whole concepts}
}
\newglossaryentry{pot}{
	name={Potentiometer},
	description={A component that varies its electrical resistance based on the displacement of the dial on its face from its original position}
}

\newglossaryentry{arduino}{
	name={Arduino},
	description={Integrated computer onto a circuit board that receives input from computer programs and drives output}
}
\newglossaryentry{photores}{
	name={Photoresistor},
	description={A component that varies its electrical resistance based on the amount of light it detects}
}
\newglossaryentry{wholeconc}{
	name={Whole Concept},
	description={Potential complete solution for a design}
}
\newglossaryentry{prototype}{
	name={Prototype},
	description={A preliminary or final model that built to test the whole concept and collect information for further improvement}
}

\newglossaryentry{torque}{
	name={Torque},
	description={Rotational force that causes the object to rotate about its centre}
}

\newglossaryentry{stalltorqure}{
	name={Stal Torque},
	description={Produced torque from a device outputs in no rotational motion (zero angular velocity). (it might be caused due to overload of the system)}
}

\newglossaryentry{drumbrake}{
	name={Drum Brake},
	description={Type of brake that uses friction pads to stop rotation of wheels}
}

\newglossaryentry{axle}{
	name={Axle},
	description={Shaft that connects and/or drives two wheels}
}

\newglossaryentry{conical}{
	name={Conical Wheels},
	description={The shape of wheels commonly used for locomotive wheels which allow turning around corners}
}
\newglossaryentry{gearbox}{
	name={Gearbox},
	description={Machine that transmits mechanical power through meshing gears}
}

\newglossaryentry{winnow}{
	name={Winnowing},
	description={Process that is used to screen out concepts based on feasibility, requirements, and technical readiness}
}
\newglossaryentry{techready}{
	name={Technical Readiness},
	description={Process of researching for availability and ease of manufacturing, operating, and disposing}
}
\newglossaryentry{eval}{
	name={Evaluation},
	description={One of the design stages which involves concept evaluation and selection using qualitative (Pugh Chart, WDM, etc.) and quantitative methods (calculations)}
}
\newglossaryentry{datum}{
	name={Datum},
	description={Well-known design that is used as reference  }
}
\newglossaryentry{friction}{
	name={Friction},
	description={Type of contact force that always opposes motion}
}
\newglossaryentry{pla}{
	name={PLA},
	description={Commonly used 3D-printing material}
}
\newglossaryentry{pulleydrive}{
	name={Pulley Drive System},
	description={One type of power transmission that uses rubber belt that’s wrapped around two synchronically rotating pulleys of various sizes}
}
\newglossaryentry{chassis}{
	name={Chassis},
	description={The lower frame of the train which supports internal elements of the train}
}
\newglossaryentry{gyro}{
	name={Gyroscope},
	description={Sensory device that’s used for navigation and detection of angular velocity (orientation about a pivot) }
}

\newglossaryentry{gearratio}{
	name={Gear Ratio},
	description={Input speed on first gear relative to output speed on the last gear}
}

\newglossaryentry{motor}{
	name={Motor},
	description={Device that converts electrical energy to rotational energy}
}
